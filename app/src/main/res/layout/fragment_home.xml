<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#263238"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_margin="17dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@drawable/profil_circle"
                android:transitionName="transitions"
                />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/profile_image"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fauzan Almaterzz"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/jabatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alex_brush"
                    android:text="Backend Android"
                    android:textColor="#E6E6E6"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_filter"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/background_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/pengumuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengumuman"
            android:layout_marginTop="17dp"
            android:layout_marginStart="20dp"
            android:textColor="#263238"
            android:textSize="12sp"
            android:fontFamily="@font/acme"
            />

        <androidx.cardview.widget.CardView
            android:elevation="0dp"
            android:id="@+id/card_pager"
            android:layout_below="@id/pengumuman"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/SliderDots"
            android:layout_below="@+id/card_pager"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/txtStatistik"
            android:layout_below="@id/card_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistik Ketepatan"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#263238"
            android:textSize="12sp"
            android:fontFamily="@font/acme"
            />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txtStatistik" />

<!--        <com.github.mikephil.charting.charts.LineChart-->
