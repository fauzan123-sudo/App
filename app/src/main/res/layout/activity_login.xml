<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/dark"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_bg_oracle"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login_logo"
            />
    <TextView
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acme"
        android:text="Login Your Account"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="be a good and polite employee"
            android:textColor="@color/white"
            android:textSize="10sp"
            />

        <EditText
            android:id="@+id/username"
            android:letterSpacing="0.1"
            android:fontFamily="@font/arial"
            android:backgroundTint="@color/white"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ic_user_icon"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:text="fauzan"
            android:textColorHint="@color/white_trans"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="20dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/password"
            android:letterSpacing="0.1"
            android:inputType="textPassword"
            android:fontFamily="@font/arial"
            android:backgroundTint="@color/white"
            android:paddingBottom="20dp"
            android:drawableEnd="@drawable/ic_toogle_password"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ic_lock"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:text="123"
            android:textColorHint="@color/white_trans"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/login"
            android:layout_marginTop="40dp"
            android:textAllCaps="false"
            android:text="Login"
            android:textSize="12sp"
            android:textColor="#96FFFFFF"
            android:backgroundTint="#F95572"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/txt1"
        android:textColor="#96FFFFFF"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PT. APTIKMA INDONESIA"
        />

    <ProgressBar
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>